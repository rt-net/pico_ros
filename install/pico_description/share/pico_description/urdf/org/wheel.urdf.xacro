<?xml version="1.0" ?>
<robot name="wheel" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="PI" value="3.1415926535897931" />
  <xacro:property name="wheel_radius" value="0.024" />
  <xacro:property name="wheel_height" value="0.008" />
  <xacro:macro name="wheel" params="rl parent">

    <link name="wheel_${rl}">
      <visual>
        <geometry>
          <cylinder
            length="${wheel_height}"
            radius="${wheel_radius}" />
        </geometry>
      </visual>
    </link>
    <joint name="wheel_${rl}_joint" type="continuous">
      <parent link="${parent}" />
      <child link="wheel_${rl}" />
      <xacro:if value="${rl == 'r'}">
        <origin xyz="0.04 0 ${0.022 - 0.0275}" rpy="0 ${PI/2} 0" />
      </xacro:if>
      <xacro:if value ="${rl == 'l'}">
        <origin xyz="-0.04 0 ${0.022 - 0.0275}" rpy="0 ${PI/2} 0" />
      </xacro:if>
      <axis xyz="0 0 1" />
      <limit effort="10" velocity="10" />
      <joint_properties damping="0.0" friction="0.0" />
    </joint>
  </xacro:macro>
</robot>
 

